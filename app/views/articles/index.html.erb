<h1>Listing articles</h1>

<table>
  <tr>
  	<th>Id</th>
    <th>Title</th>
    <th>Text</th>
    <th>Genre</th>
    <th>Url</th>
    <th>Related</th>
    <th>Memo</th>
    <th>Created at</th>
  </tr>

<% @articles.each do |article| %>
  <tr>
  	<td><%= article.id %></td>
    <td><%= link_to article.title, article %></td>
    <td><%= article.text %></td>
    <td><%= article.genre %></td>
    <td><%= link_to article.url, article.url, {:target => "_blank"} %></td>
    <td><%= article.related %></td>
    <td><%= article.memo %></td>
    <td><%= article.created_at %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Article', new_article_path %>
